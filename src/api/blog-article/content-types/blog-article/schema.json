{
  "kind": "collectionType",
  "collectionName": "blog_articles",
  "info": {
    "singularName": "blog-article",
    "pluralName": "blog-articles",
    "displayName": "Blog Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "publishDate": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "previewImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "blog_articles"
    },
    "section": {
      "type": "dynamiczone",
      "components": [
        "article-hero.article-hero",
        "text.text",
        "content-aside.content-aside",
        "socials.socials"
      ],
      "required": true
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "Samuel Torres"
    }
  }
}
